<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/e_perforacion3"
    android:padding="110dp"
    tools:context=".activities.IminaLimaActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape3"
            android:padding="25dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/OT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text=" Lista de Equipos de Interior de Mina"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner_IM"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:entries="@array/list_interiores"
                android:padding="20dp" />
            <Button
                android:id="@+id/btnSeleccionar"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#26CA69"
                android:elevation="5dp"
                android:text="INGRESAR"
                android:textColor="#FFFFFF"
                android:onClick="IrseleccionarMina"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>