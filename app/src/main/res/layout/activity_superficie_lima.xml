<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/e_perforacion3"
    android:padding="110dp"
    tools:context=".activities.SuperficieLimaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout

            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape3"
            android:padding="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text=" Lista de MÃ¡quinas de Superficie"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_Sup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:entries="@array/list_maquinas"
                android:padding="20dp" />


            <Button
                android:id="@+id/btnLogout"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#26CA69"
                android:elevation="5dp"
                android:text="Ingresar"
                android:onClick="Irseleccionar"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                tools:ignore="OnClick" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>


        </LinearLayout>



    </ScrollView>


</LinearLayout>