                android:layout_below="@+id/inputEspecifica2"
                android:id="@+id/textTotalHoras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignEnd="@+id/center_view">

                <TextView
